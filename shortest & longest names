/*
SELECT CITY , LENGTH(CITY) 
FROM STATION 
WHERE LENGTH(CITY) in 
((SELECT * FROM (SELECT LENGTH(CITY) FROM STATION ORDER BY LENGTH(CITY)) AS T1 limit 1),
 (SELECT * FROM (SELECT LENGTH(CITY) FROM STATION ORDER BY LENGTH(CITY) DESC) AS T2 limit 1))
ORDER BY LENGTH(CITY) ASC , CITY ;
*/



SELECT *
FROM
    (SELECT CITY AS C, LENGTH(CITY) AS L
    FROM STATION
    ORDER BY L, C) AS T1
limit 1;

SELECT *
FROM
    (SELECT CITY AS C, LENGTH(CITY) AS L
    FROM STATION
    ORDER BY L DESC, C) AS T2
limit 1;
